 * A card displayed on the homepage for each chapter of the course.
 * Shows the chapter title, description, lesson count, and a link to the first lesson.
 *
 * @see Lesson 1.3 (Astro Components) for how props and slots work.
 */
import { url } from '../utils/paths';

interface Props {
  number: number;
  title: string;
  description: string;
  lessonCount: number;
  firstLessonSlug: string;
}

const { number, title, description, lessonCount, firstLessonSlug } = Astro.props;

const difficultyLabels: Record<number, string> = {
  1: 'Beginner',
  2: 'Beginner',
  3: 'Intermediate',
  4: 'Intermediate',
  5: 'Advanced',
};
---

<a href={url(`/lessons/${firstLessonSlug}/`)} class="chapter-card">
  <div class="chapter-number">Chapter {number}</div>
  <h3 class="chapter-title">{title}</h3>
  <p class="chapter-description">{description}</p>
  <div class="chapter-meta">
    <span class="lesson-count">{lessonCount} lessons</span>
    <span class="difficulty">{difficultyLabels[number]}</span>
  </div>
</a>

<style>
  .chapter-card {
    display: block;
    padding: var(--space-6);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    background: var(--color-bg-secondary);
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .chapter-card:hover {
    border-color: var(--color-accent);
    background: var(--color-bg-tertiary);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .chapter-number {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-accent-light);
    margin-bottom: var(--space-2);
  }

  .chapter-title {
    font-size: var(--font-size-xl);
    color: var(--color-text);
    margin: 0 0 var(--space-2);
  }

  .chapter-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    line-height: 1.5;
  }

  .chapter-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

